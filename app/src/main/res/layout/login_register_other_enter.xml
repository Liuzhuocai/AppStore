<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
>
    <TextView
        android:id="@+id/login_register_enter_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_register_left"
        android:layout_alignParentLeft="true"
        android:focusable="true"
        android:clickable="true"
        style="@style/login_enter_textview"
    />
    <TextView
        android:id="@+id/login_register_enter_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="true"
        android:clickable="true"
        android:text="@string/login_register_verification_right"
        style="@style/login_enter_textview"
    />
</RelativeLayout>