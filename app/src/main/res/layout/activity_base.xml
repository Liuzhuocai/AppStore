<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/root_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_toolbar"
        android:theme="@style/BaseToolbar"
        app:contentInsetStartWithNavigation="0.1dp"
        app:contentInsetStart="0.1dp"
    >
        <TextView
            android:id="@+id/tool_bar_left_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/information_me_back"
            android:layout_gravity="left"
            android:layout_marginEnd="50dp"
        />
        <TextView
            android:id="@+id/tool_bar_center_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_me_settings"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tool_bar_right_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:visibility="gone"
            />
    </android.support.v7.widget.Toolbar>
    <!--<include layout="@layout/layout_loading_page_view_stub" />-->
</LinearLayout>
