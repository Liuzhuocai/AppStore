<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3f3f3"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/font_black_medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="5.0dip"
            android:text="个人设置"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_bind"
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="1.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                style="@style/font_gray_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="手机号码" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/font_gray_hint_medium"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:drawablePadding="5.0dip"
                android:drawableRight="@drawable/ic_arrow_gray_big"
                android:gravity="center|right"
                android:text="未绑定" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_modify"
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="1.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                style="@style/font_gray_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="密码" />

            <TextView
                style="@style/font_gray_hint_medium"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:drawablePadding="5.0dip"
                android:drawableRight="@drawable/ic_arrow_gray_big"
                android:gravity="center|right"
                android:text="修改" />
        </LinearLayout>
        <!--LinearLayout android:orientation="horizontal" android:id="@+id/ll_address" android:background="@color/white" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:layout_width="match_parent" android:layout_height="45.0dip" android:layout_marginBottom="1.0dip">
            <TextView android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="邮寄地址" style="@style/font_gray_medium" />
            <TextView android:gravity="center|right" android:layout_width="0.0dip" android:layout_height="match_parent" android:text="修改" android:drawableRight="@mipmap/ic_arrow_gray_big" android:drawablePadding="5.0dip" android:layout_weight="1.0" style="@style/font_gray_hint_medium" />
        </LinearLayout>-->
        <TextView
            style="@style/font_black_medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="5.0dip"
            android:text="下载设置"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="1.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                style="@style/font_black_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="仅在WIFI的情况下下载" />

            <CheckBox
                android:id="@+id/cb_wifi"
                style="@style/font_gray_hint_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_setting_state"
                android:button="@null"
                android:checked="true"
                android:gravity="center|right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="1.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <CheckBox
                android:id="@+id/cb_auto_install"
                style="@style/font_gray_hint_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_setting_state"
                android:button="@null"
                android:checked="true"
                android:gravity="center|right" />

            <TextView
                android:id="@+id/textView2"
                style="@style/font_black_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="下载完成后自动安装应用" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="1.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                style="@style/font_black_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="安装完成后删除安装包" />

            <CheckBox
                android:id="@+id/cb_delete_apk"
                style="@style/font_gray_hint_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_setting_state"
                android:button="@null"
                android:checked="true"
                android:gravity="center|right" />
        </RelativeLayout>

        <TextView
            style="@style/font_black_medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="5.0dip"
            android:text="其他"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="1.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                style="@style/font_black_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="消息推送" />

            <CheckBox
                android:id="@+id/cb_message_pushed"
                style="@style/font_gray_hint_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_setting_state"
                android:button="@null"
                android:checked="true"
                android:gravity="center|right" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="1.0dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                style="@style/font_black_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="清除缓存" />

            <TextView
                android:id="@+id/tv_cache"
                style="@style/font_gray_hint_medium"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center|right"
                android:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_update"
            style="@style/font_black_medium"
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="1.0dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="版本检测" />

        <TextView
            android:id="@+id/tv_about_us"
            style="@style/font_black_medium"
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="20.0dip"
            android:background="@color/white"
            android:drawablePadding="5.0dip"
            android:drawableRight="@drawable/ic_arrow_gray_big"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="关于我们" />

        <Button
            android:id="@+id/bt_logout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@android:color/holo_blue_bright"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="16.0sp" />
    </LinearLayout>
</ScrollView>