<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_item"
android:layout_width="match_parent"
android:layout_height="@dimen/app_item_hight"
android:background="@drawable/list_item_selector"
android:descendantFocusability="blocksDescendants"
android:paddingBottom="10dp"
android:paddingLeft="18.33dp"
android:paddingRight="16dp"
android:paddingTop="10dp">

<ImageView
    android:id="@+id/app_icon"
    android:layout_width="58.66dp"
    android:layout_height="58.66dp"
    android:layout_centerVertical="true"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/app_item_hight"
    android:layout_centerVertical="true"
    android:layout_marginLeft="13.33dp"
    android:layout_toLeftOf="@+id/app_download"
    android:layout_toRightOf="@+id/app_icon"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.86"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16.66sp" />
    <TextView
        android:id="@+id/app_meno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="16.66sp" />

</LinearLayout>

<Button
    android:id="@+id/app_download"
    android:layout_width="@dimen/app_item_hight"
    android:layout_height="@dimen/app_item_hight"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true" />

</RelativeLayout>
